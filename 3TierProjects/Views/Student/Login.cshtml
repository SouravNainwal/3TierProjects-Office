@model _3TierProjects3.DAL.model.LoginModel
@{ Layout = null; }

<link href="~/css/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/css/metisMenu.min.css" rel="stylesheet" />
<link href="~/css/css/startmin.css" rel="stylesheet" />
<link href="~/css/css/font-awesome.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <form asp-action="Login" asp-controller="Student" formmethod="post">
                        <fieldset>
                            <input type="hidden" asp-for="StudentId" />
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="">
                            </div>
                            <div class="form-group form-check">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                </label>

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" />
                                <p>
                                    <a asp-action="Registration">Create New</a>
                                </p>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/js/js/jquery.min.js"></script>
<script src="~/js/js/bootstrap.min.js"></script>
<script src="~/js/js/metisMenu.min.js"></script>
<script src="~/js/js/startmin.js"></script>



