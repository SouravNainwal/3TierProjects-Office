@model _3TierProjects3.DAL.model.LoginModel

@{
    Layout = null;
}
<link href="~/css/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/css/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/css/metisMenu.min.css" rel="stylesheet" />
<link href="~/css/css/startmin.css" rel="stylesheet" />
<body style="background-image: url(/css/IMG_4417.jpg); background-repeat: no-repeat; background-size: cover; background-attachment: fixed ">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default" style="background-image: url(/css/Abc.jpg)">
                    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" asp-controller="Student" asp-action="Login" role="tab"
                               aria-controls="pills-login" aria-selected="true">Login</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="tab-register" data-mdb-toggle="pill" asp-controller="Student" asp-action="Registration" role="tab"
                               aria-controls="pills-register" aria-selected="false">Register</a>
                        </li>
                    </ul>
                    <h2 class="panel-title text-center">Student Registration</h2>
                    <div class="panel-body">
                        <form asp-action="Registration">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" type="text" placeholder="Enter your Name here" class="form-control" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" type="email" placeholder="Enter your E-mail Address" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" type="password" placeholder="Enter a unique Password" class="form-control" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group form-check d-flex justify-content-center mb-4">
                                <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck"
                                       aria-describedby="registerCheckHelpText" required />
                                    I have read and agree to the terms                               
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block mb-3">Sign up</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/js/bootstrap.min.js"></script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
